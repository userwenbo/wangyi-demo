// 一像素边框
// $offset指定边框位置 两个值 top  bottom
border-1px($color, $offset = top) {
  position: relative;
  &::before {
    position: absolute;
    left: 0;
    width: 100%;
    height: 1px;
    background: $color;
    content: '';

    if ($offset == bottom) {
      bottom: 0;
    } else {
      top: 0;
    }

    @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 2dppx) {
      transform: scaleY(0.5);
    }

    @media (-webkit-min-device-pixel-ratio: 3), (min-resolution: 3dppx) {
      transform: scaleY(0.33);
    }
  }
}